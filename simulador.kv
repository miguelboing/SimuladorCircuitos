<Gerenciador>:
# Gerenciador responsável por administrar as telas.
    Menu:
        name: 'menu'
    Interface_G:
        name: 'interface'
    Info:
        name:'info'

<Menu>:
# Tela de Menu com botões para acessar as outras telas.
    BoxLayout:
        orientation:'vertical'
        Label:
            text: 'Logic Gates Simulator'
            font_size: 50
        Label:
            text: 'Beta Version 0.0.01'
        Button:
            text: 'Start the simulator'
            on_release: app.root.current = 'interface'
        Button:
            text: 'About the project'
            on_release: app.root.current = 'info'


<Interface_G>:
    # Tela do simulador.
    BoxLayout: #Layout contendo toda a tela
        orientation:'vertical'

        BoxLayout:#Box layout com o menu superior   
            size_hint: 1, 0.25
            GridLayout:#Botões de componentes
                size_hint: 0.50, 1
                rows: 2
                cols: 4
                orientation:'vertical'
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text:'AND'
                Button:
                    text:'OR'
                Button:
                    text:'NOT'
                Button:
                    text:'NAND'
                Button:
                    text:'NOR'
                Button:
                    text:'XOR'
                Button:
                    text:'INP'
                Button:
                    text:'OUT'

            BoxLayout:
                canvas:
                    Color:
                        rgba: 1,0,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size


        BoxLayout:#Box layout com o resto a área de trabalho
            canvas:
                Color:
                    rgba: 1,1,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
                        


<Info>:
    # Tela com informações sobre o projeto.
    BoxLayout:
        Label:
            text: 'Projeto criado por Miguel Boing e Davi Seeman.'

        Button:
            text: 'Back to the main screen'
            on_release: app.root.current = 'menu'