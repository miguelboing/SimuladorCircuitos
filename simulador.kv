<Gerenciador>:
# Gerenciador responsável por administrar as telas.
    Menu:
        name: 'menu'
    Interface_G:
        name: 'interface'
    Info:
        name:'info'

<Menu>:
# Tela de Menu com botões para acessar as outras telas.
    BoxLayout:
        orientation:'vertical'
        Label:
            text: 'Logic Gates Simulator'
            font_size: 50
        Label:
            text: 'Beta Version 0.0.2'
        Button:
            text: 'Start the simulator'
            on_release: app.root.current = 'interface'
        Button:
            text: 'About the project'
            on_release: app.root.current = 'info'


<Interface_G>:
    # Tela do simulador.
    BoxLayout: #Layout contendo toda a tela
        orientation:'vertical'

        BoxLayout:#Box layout com o menu superior   
            size_hint: 1, 0.15
            GridLayout:#Botões de componentes
                size_hint: 0.50, 1
                rows: 2
                cols: 4
                orientation:'vertical'
                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    text:'AND'
                    on_release: root.addComponent()
                Button:
                    text:'OR'
                    on_release: root.addComponen()
                Button:
                    text:'NOT'
                    on_release: root.addComponent()
                Button:
                    text:'NAND'
                    on_release: root.addComponent()
                Button:
                    text:'NOR'
                    on_release: root.addComponent()
                Button:
                    text:'XOR'
                    on_release: root.addComponent()
                Button:
                    text:'INP'
                    on_release: root.addComponent()
                Button:
                    text:'OUT'
                    on_release: root.addComponent()
            BoxLayout:
                canvas:
                    Color:
                        rgba: 1,0,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size


        RelativeLayout:#Box layout com o resto a área de trabalho
            id: workflow
            canvas:
                Color:
                    rgba: 1,1,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size

<Info>:
    # Tela com informações sobre o projeto.
    BoxLayout:
        Label:
            text: 'Projeto criado por Miguel Boing e Davi Seeman.'

        Button:
            text: 'Back to the main screen'
            on_release: app.root.current = 'menu'


<Comp>:    
    # Declaração do Widget Componente
    id: component
    drag_rectangle: self.x, self.y, self.width, self.height
    size_hint_x: None
    size_hint_y: None
    size_x: 60
    size_y: 60
    drag_timeout: 10000000
    drag_distance:0
    canvas:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Logic Gate'
        pos: component.pos